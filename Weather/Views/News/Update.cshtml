@model Weather.ViewModels.UpdateNewsModel

@{
    ViewBag.Title = "Update";
}

<div>
    <form action="/News/Update" method="post">
        <input type="hidden" value="@Model.Id.ToString()" name="id" />
        <div>
            <label for="title">Title</label>
            <input type="text" value="@Model.Title" id="title" name="title" />
        </div>
        <div>
            <label for="content">Content</label>
            <textarea id="content" rows="15" cols="70" name="content">@Model.Content</textarea>
        </div>
        <input type="submit" value="Submit" />
    </form>
</div>



